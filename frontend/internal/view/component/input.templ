package component

templ Input(name, label, inputType, placeholder string) {
	<div class="flex flex-col gap-1">
		<label for={ name } class="text-sm font-medium text-gray-700">{ label }</label>
		<input
			type={ inputType }
			name={ name }
			id={ name }
			placeholder={ placeholder }
			class="border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-400 focus:border-blue-400 outline-none transition"
		/>
	</div>
}
